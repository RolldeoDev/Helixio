{
  "name": "helixio",
  "version": "0.1.0",
  "description": "Comic book collection management tool",
  "private": true,
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run dev --workspace=server",
    "dev:client": "npm run dev --workspace=client",
    "build": "npm run build --workspace=server && npm run build --workspace=client",
    "build:server": "npm run build --workspace=server",
    "build:client": "npm run build --workspace=client",
    "start": "npm run start --workspace=server",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "docker:build": "docker build -t helixio:latest .",
    "docker:run": "docker run -d --name helixio -p 8483:8483 -e PUID=1000 -e PGID=1000 -v ./test-config:/config -v ./test-comics:/comics helixio:latest",
    "docker:stop": "docker stop helixio && docker rm helixio",
    "docker:logs": "docker logs -f helixio",
    "docker:shell": "docker exec -it helixio /bin/bash",
    "docker:export": "docker save helixio:latest | gzip > helixio-docker.tar.gz"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.4.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@tanstack/react-virtual": "^3.13.13"
  }
}
